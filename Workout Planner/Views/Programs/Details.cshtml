@model Workout_Planner.Models.Workout.Program

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<body>
    <div id="wrapper">
        <div id="page-wrapper">
            <div class="row">
                <div class="" col-xs-12 col-sm-6 col-md-8"">
                    <h1 class="page-header"> @Html.DisplayFor(model => model.Title)</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Collapsible Accordion Panel Group
                        </div>
                        <!-- .panel-heading -->
                        <div class="panel-body">
                            <div class="panel-group" id="accordion">
                                @{
                                    int i = 1;
                                    foreach (var week in ViewBag.programWeeks)
                                    {
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h4 class="panel-title">
                                                    <a data-toggle="collapse" data-parent="#accordion" href="@("#collapse"+ i)">@week.Title</a>
                                                </h4>
                                            </div>
                                            <div id="@("collapse" + i)" class="panel-collapse collapse in">
                                                <div class="panel-body">
                                                    <button type="button" class="btn btn-primary">
                                                        <a asp-area="" asp-controller="Workouts" asp-action="Create"><i class="fa fa-plus"></i> Add Workout</a>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        i++;
                                    }
                                }
                            </div>
                        </div>
                        <!-- .panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
</body>


