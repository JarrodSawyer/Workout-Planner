@using Microsoft.AspNetCore.Identity
@using Workout_Planner.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="fa fa-user fa-fw"></i> Manage</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <button type="submit" class="btn btn-link navbar-btn navbar-link"> <i class="fa fa-sign-out fa-fw"></i> Log out</button>
                    </li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
